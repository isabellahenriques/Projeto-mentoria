{
  "openapi": "3.0.0",
  "info": {
    "title": "API Lista de Compras de Supermercado",
    "version": "1.0.0",
    "description": "API para criar e gerenciar listas de compras de supermercado, com autenticação JWT."
  },
  "paths": {
    "/user/login": {
      "post": {
        "summary": "Login do usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Login" }
            }
          }
        },
        "responses": {
          "200": { "description": "Login bem-sucedido", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Token" } } } },
          "401": { "description": "Usuário ou senha inválidos" }
        }
      }
    },
    "/user/register": {
      "post": {
        "summary": "Registrar novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Register" }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário registrado" },
          "409": { "description": "Usuário já existe" }
        }
      }
    },
    "/product": {
      "post": {
        "summary": "Criar produto",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": { "$ref": "#/components/schemas/ProductCreate" }
            }
          }
        },
        "responses": {
          "201": { "description": "Produto criado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Product" } } } },
          "400": { "description": "Categoria inválida" },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Token inválido" }
        }
      },
      "get": {
        "summary": "Listar produtos por categoria",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Produtos agrupados por categoria", "content": { "application/json": { "schema": { "type": "object", "additionalProperties": { "type": "array", "items": { "$ref": "#/components/schemas/Product" } } } } } },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Token inválido" }
        }
      }
    },
    "/product/{id}": {
      "put": {
        "summary": "Atualizar produto",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": { "$ref": "#/components/schemas/ProductUpdate" }
            }
          }
        },
        "responses": {
          "200": { "description": "Produto atualizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Product" } } } },
          "400": { "description": "Categoria inválida" },
          "404": { "description": "Produto não encontrado" },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Token inválido" }
        }
      },
      "delete": {
        "summary": "Deletar produto",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "204": { "description": "Produto deletado" },
          "404": { "description": "Produto não encontrado" },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Token inválido" }
        }
      }
    },
    "/shopping-list": {
      "post": {
        "summary": "Gerar lista de compras",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "201": { "description": "Lista criada", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ShoppingList" } } } },
          "400": { "description": "Nenhum produto cadastrado" },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Token inválido" }
        }
      },
      "get": {
        "summary": "Ver listas de compras",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Listas de compras", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/ShoppingList" } } } } },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Token inválido" }
        }
      }
    },
    "/shopping-list/{listId}/check/{productId}": {
      "patch": {
        "summary": "Marcar produto como comprado na lista",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "listId", "in": "path", "required": true, "schema": { "type": "integer" } },
          { "name": "productId", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Produto marcado como comprado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Product" } } } },
          "404": { "description": "Lista ou produto não encontrado" },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Token inválido" }
        }
      }
    },
    "/shopping-list/{listId}": {
      "delete": {
        "summary": "Deletar lista de compras",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "listId", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "204": { "description": "Lista deletada" },
          "404": { "description": "Lista não encontrada" },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Token inválido" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Login": {
        "type": "object",
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "Register": {
        "type": "object",
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "Token": {
        "type": "object",
        "properties": {
          "token": { "type": "string" }
        }
      },
      "ProductCreate": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "photo": { "type": "string", "format": "binary" },
          "quantity": { "type": "integer" },
          "observation": { "type": "string" },
          "category": { "type": "string", "enum": ["Sacolão", "Proteina", "Padaria", "Frios", "Higiene", "Limpeza", "Bebidas", "Alimentos Diversos", "Produtos Diversos"] }
        },
        "required": ["name", "quantity", "category"]
      },
      "ProductUpdate": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "photo": { "type": "string", "format": "binary" },
          "quantity": { "type": "integer" },
          "observation": { "type": "string" },
          "category": { "type": "string", "enum": ["Sacolão", "Proteina", "Padaria", "Frios", "Higiene", "Limpeza", "Bebidas", "Alimentos Diversos", "Produtos Diversos"] }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "photo": { "type": "string" },
          "quantity": { "type": "integer" },
          "observation": { "type": "string" },
          "category": { "type": "string" },
          "checked": { "type": "boolean" }
        }
      },
      "ShoppingList": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "items": { "type": "array", "items": { "$ref": "#/components/schemas/Product" } },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      }
    }
  }
}
